@using EntityLayer.Concrete
@model List<Content>

@{
    ViewBag.Title = "GetAllContent";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>İçerik Arama</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <style>
        /* Tüm margin ve padding'i sıfırlama */
        html, body {
            margin: 0;
            padding: 0;
            width: 100%;
            height: 100%;
            overflow-x: hidden;
        }

        /* Container'a üstten boşluk ekleme */
        .container {
            padding-top: 30px;
        }

        /* İçerik Arama başlığının görünümü */
        .search-header {
            background-color: #343a40;
            color: white;
            padding: 15px;
            text-align: center;
            border-radius: 5px;
            margin-bottom: 15px;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="search-header">
                    <h4 class="mb-0">İçerik Arama</h4>
                </div>

                <div class="card shadow-sm">
                    <div class="card-body">
                        @using (Html.BeginForm("GetAllContent", "Content", FormMethod.Post))
                        {
                            <div class="input-group">
                                @Html.TextBox("p", null, new { @class = "form-control", placeholder = "Aranacak kelimeyi girin..." })
                                <div class="input-group-append">
                                    <button class="btn btn-dark" type="submit">Ara</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <div class="mt-4">
                    @if (Model != null && Model.Any())
                    {
                        <ul class="list-group">
                            @foreach (var item in Model)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span>@item.ContentValue</span>
                                    <span class="badge badge-info">Yazar ID: @item.WriterID</span>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <div class="alert alert-warning text-center">
                            İçerik bulunamadı.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>
